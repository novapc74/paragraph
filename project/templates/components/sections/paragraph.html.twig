<section class="section section_light paragraph">
    <div class="container">
        <div class="paragraph__title">
            <svg>
                <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#text-logo"></use>
            </svg>
        </div>
        <div class="paragraph__swiper-container">
            <div class="swiper paragraph__swiper paragraph-swiper">
                <div class="swiper-wrapper paragraph-swiper__wrapper">
                    {% for i in 1..13 %}
                        <div class="swiper-slide paragraph-swiper__slide">
                            <img src="{{ asset("build/images/paragraph-#{i}.jpg") }}" loading="lazy" alt="paragraph collection">
                            <span class="paragraph-swiper__overlay"></span>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="default-swiper-navigation paragraph__navigation">
                {% include 'components/base/swiper-button.html.twig' %}
                <div class="default-swiper-pagination paragraph__pagination"></div>
                {% include 'components/base/swiper-button.html.twig' with { direction: 'next' } %}
            </div>
        </div>
    </div>
</section>