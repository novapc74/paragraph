<footer class="footer">
    <div class="container footer__container">
        <div class="footer__top footer-top">
            <div class="footer-top__left">
                {% if isHome %}
                    <div class="logo footer__logo">
                        <svg>
                            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#logo"></use>
                        </svg>
                    </div>
                {% else %}
                    <a href="{{ path('app_home_page') }}" class="logo footer__logo">
                        <svg>
                            <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#logo"></use>
                        </svg>
                    </a>
                {% endif %}
                <nav class="footer__nav">
                    <ul class="footer__list">
                        <li class="footer__item">
                            <a href="/#about" class="default-link default-link_white footer__link">О нас</a>
                        </li>
                        <li class="footer__item">
                            <a href="/#catalog" class="default-link default-link_white footer__link">Каталог (<span class="numeric">3</span>)</a>
                        </li>
                        <li class="footer__item">
                            <a href="/#manufacture" class="default-link default-link_white footer__link">Наше производство</a>
                        </li>
                        <li class="footer__item">
                            <a href="/#reviews" class="default-link default-link_white footer__link">Отзывы</a>
                        </li>
                        <li class="footer__item">
                            <a href="/#contacts" class="default-link default-link_white footer__link">Контакты</a>
                        </li>
                    </ul>
                </nav>
            </div>
            {% if socialNetworks and socialNetworks | length %}
                <div class="footer-top__right">
                    <ul class="footer__list footer__list_socials">
                        {% for socialNetwork in socialNetworks %}
                            <li class="footer__item footer__item_social">
                                <a href="{{ socialNetwork.link }}" class="default-link default-link_white footer__link footer__link_social">{{ socialNetwork.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
        <div class="footer__bottom">
            <div class="footer__info">
                {% if contact.inn %}
                    <span class="footer__inn numeric">ИНН {{ contact.inn }}</span>
                    <span class="footer__copyright">© {{ 'now' | date('Y') }} Параграф</span>
                {% endif %}
            </div>
            <a href="{{ path('app_policy') }}" class="footer__policy">Политика конфиденциальности</a>
            <a href="mailto:PalmsAndFerns.Team@gmail.com" class="footer__made-by">
                <span>Made by</span>
                <svg>
                    <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#pf-logo"></use>
                </svg>
            </a>
        </div>
    </div>
</footer>