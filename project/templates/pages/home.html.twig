{% extends 'layouts/default.html.twig' %}

{% block title %}Paragraph | Продажа канцелярских товаров для хранения документов{% endblock %}

{% block meta %}
    <meta property="og:title"
          content="PARAGRAPH – это стильные и функциональные канцелярские товары для хранения документов">
    <meta property="og:description"
          content="Наша продукция - это стильный и функциональный порядок в вашем доме и офисе. Мы осознанно отказались от производства вертикальных накопителей, поставляемых в сложенном состоянии, понимая, что они не могут гарантировать отсутствие перекосов и деформаций после их приведения в собранное состояние.">
{% endblock %}

{% block content %}

    <h1 class="invisible">PARAGRAPH – это стильные и функциональные канцелярские товары для хранения документов</h1>

    {% if main_blocks | length %}
        {% include 'components/sections/hero.html.twig' with {blocks: main_blocks} %}
    {% endif %}

    {% include 'components/sections/wholesale.html.twig' %}

    {% include 'components/sections/about.html.twig' %}

    {% include 'components/sections/paragraph.html.twig' %}

    {% include 'components/sections/semicircles.html.twig' %}

    {#    {% if categories | length %} #}
    {#        {% include 'components/sections/categories.html.twig' with {categories} %} #}
    {#    {% endif %} #}

    {% if products | length %}
        {% include 'components/sections/catalog.html.twig' with {products} %}
    {% endif %}

    {% if interior_blocks | length %}
        {% include 'components/sections/interior.html.twig' with {blocks: interior_blocks} %}
    {% endif %}

    {% include 'components/sections/manufacture.html.twig' %}

    {% if reviews | length %}
        {% include 'components/sections/reviews.html.twig' with { reviews, reviewAllCount } %}
    {% endif %}

    {% include 'components/sections/contacts.html.twig' %}

    <div class="back hidden">
        <button class="back__btn circled-button circled-button" data-back>
            <svg>
                <use xlink:href="{{ asset('build/images/svg/sprite.svg') }}#arrow-icon"></use>
            </svg>
        </button>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://api-maps.yandex.ru/2.1/?apikey=66e7f852-a2c4-46fc-b4f3-254ece42aa13&lang=ru_RU"
            type="text/javascript" defer>
    </script>
{% endblock %}